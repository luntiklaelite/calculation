<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8ECD9"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button8"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        android:onClick="inputNumber"
        android:text="9"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button9"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        android:onClick="inputNumber"
        android:text="8"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button10"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        android:onClick="inputNumber"
        android:text="7"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:text="Calc me!"
        android:textColor="#EF0000"
        android:textSize="36sp"
        app:drawableTint="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textbox1"
        android:layout_width="351dp"
        android:layout_height="49dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="number me!"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:onClick="inputNumber"
        android:text="1"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:onClick="inputNumber"
        android:text="2"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:onClick="inputNumber"
        android:text="3"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        android:onClick="inputNumber"
        android:text="6"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button6"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        android:onClick="inputNumber"
        android:text="5"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        android:onClick="inputNumber"
        android:text="4"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button11"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:onClick="inputSign"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button14"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:onClick="inputSign"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button15"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:onClick="inputSign"
        android:text="*"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/button11"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <Button
        android:id="@+id/button16"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:onClick="inputSign"
        android:text="/"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/button14"
        app:layout_constraintTop_toBottomOf="@+id/button14" />

    <Button
        android:id="@+id/button17"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:onClick="getItog"
        android:text="GET NUMBER!"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button16" />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:onClick="inputNumber"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/button8"
        app:layout_constraintStart_toStartOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

</androidx.constraintlayout.widget.ConstraintLayout>